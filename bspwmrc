#!/usr/bin/env zsh
bspc rule -r "*"
start-pulseaudio-x11 &
redshift -l 52:0 &
setxkbmap -layout us -variant dvp -option ctrl:nocaps &
nitrogen --set-auto $HOME/images/mountains.jpg &
xrdb -load $XDG_CONFIG_HOME/X11/xresources &
sxhkd &
xcalib $HOME/.local/share/LP156WF6_SPK1.icm &
unclutter --timeout 1 --ignore-scrolling &
xset r rate 300 75 &
polybar -c $XDG_CONFIG_HOME/polybar/config.ini status_top &
xcape -e "Control_L=Escape" &

bspc monitor eDP1 -d I II III IV V VI VII VIII IX
bspc desktop -f 1

bspc config border_width 0
bspc config window_gap 4
bspc config top_padding 22
bspc config focus_follows_pointer true

bspc rule -a Emacs state=tiled
bspc rule -a Zathura state=tiled
bspc rule -a Surf state=tiled

echo Loaded!
