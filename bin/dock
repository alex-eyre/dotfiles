#!/usr/bin/env sh
optirun intel-virtual-output
xrandr --output VIRTUAL1 --mode $(xrandr | grep 144.0 | cut -d " " -f 4) --same-as eDP1
bspc monitor "VIRTUAL1" -s "main"
bspc monitor "main" -n "main_ext"
bspc monitor "VIRTUAL1" -n "main"
bspc monitor "main_ext" -d I II III IV V VI VII VIII IX
xrandr --output VIRTUAL2 --auto --right-of VIRTUAL1
bspc monitor "VIRTUAL2" -n "secondary_ext"
bspc monitor "secondary_ext" -d I II III IV V VI VII VIII IX
bspc monitor -f "main_ext"
